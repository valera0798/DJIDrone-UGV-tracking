<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Video Surface-->
    <TextureView
        android:id="@+id/tv_video_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />

    <!--Header-->
    <TextView
        android:id="@+id/tv_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="@string/ui_tv_activity_tracking"
        android:textColor="@color/colorWhite"
        android:textSize="21sp" />
    <!--Header-->

    <!--Tracking info-->
    <SlidingDrawer
        android:id="@+id/sd_tracking_task_info"
        android:layout_width="454dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_connection_status"
        android:layout_marginTop="8dp"
        android:content="@+id/sd_tracking_task_info_content"
        android:handle="@+id/sd_tracking_task_info_handle"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/sd_tracking_task_info_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@id/sd_tracking_task_info_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ScrollView
                android:id="@+id/sv_timeline_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:scrollbars="vertical">

                <TextView
                    android:id="@+id/tv_timeline_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:text="@string/ui_tv_timeline_info"
                    android:textColor="@color/colorWhite" />
            </ScrollView>

            <View style="@style/dividerVertical" />

            <ScrollView
                android:id="@+id/sv_tracking_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:scrollbars="vertical">

                <TextView
                    android:id="@+id/tv_tracking_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:text="@string/ui_tv_tracking_info"
                    android:textColor="@color/colorWhite" />
            </ScrollView>

            <View style="@style/dividerVertical" />

            <ScrollView
                android:id="@+id/sv_mission_control_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:clickable="false"
                android:scrollbars="vertical">

                <TextView
                    android:id="@+id/tv_mission_control_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:text="@string/ui_tv_tracking_task_info"
                    android:textColor="@color/colorWhite" />
            </ScrollView>

        </LinearLayout>
    </SlidingDrawer>

    <!--Tracking management-->
    <RelativeLayout
        android:id="@+id/rl_tracking_stuff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_tracking_aim"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/visual_track_target_bg"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_tracking_target"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/visual_track_cannot_confirm"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/rl_container_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_start_tracking_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:text="@string/ui_btn_start_tracking"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_container_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/rl_container_buttons"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_state_longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="@string/ui_tv_state_longitude"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_state_latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="@string/ui_tv_state_latitude"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_state_altitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="@string/ui_tv_state_altitude"
                android:textColor="@color/colorWhite" />
        </LinearLayout>


    </RelativeLayout>

    <!--Tracking execution management-->
    <RelativeLayout
        android:id="@+id/rl_active_track_execution_management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="8dp">

        <ImageButton
            android:id="@+id/btn_stop_tracking"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/mission_stop" />

    </RelativeLayout>

</RelativeLayout>