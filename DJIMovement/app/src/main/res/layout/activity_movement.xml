<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="7"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/container_running_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_running_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/ui_tv_running_info"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14dp" />

            <ListView
                android:id="@+id/lv_running_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_running_info" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_timeline_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_timeline_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/ui_tv_timeline_info"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14dp" />

            <ListView
                android:id="@+id/lv_timeline_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_timeline_info" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_state_longitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:text="State" />

        <TextView
            android:id="@+id/tv_state_latitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:text="State" />

        <TextView
            android:id="@+id/tv_state_altitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:text="State" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/container_actions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TableRow android:gravity="center">
            <Button
                android:id="@+id/btn_init_mission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="@string/ui_btn_init_mission" />

            <Button
                android:id="@+id/btn_start_mission"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="@string/ui_btn_start_mission" />

            <Button
                android:id="@+id/btn_pause_mission"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="@string/ui_btn_pause_mission" />

            <Button
                android:id="@+id/btn_resume_mission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="@string/ui_btn_resume_mission" />

            <Button
                android:id="@+id/btn_stop_mission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="@string/ui_btn_stop_mission" />

            <Button
                android:id="@+id/btn_clear_timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="@string/ui_btn_clear_timeline" />
        </TableRow>

    </TableLayout>
</LinearLayout>